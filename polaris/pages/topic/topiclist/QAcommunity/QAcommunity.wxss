/* pages/topic/topiclist/QAcommunity/QAcommunity.wxss */

.container {
  padding: 20rpx; /* 保持内边距 */
}

/* 提问框容器--代表一个问题卡片 */
.question-item {
  width: 90%;  /* 屏幕宽度的 90% */
  background-color: #f5f5f5;
  padding: 20rpx;
  margin-bottom: 30rpx;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

/* 提问标题 */
.question-title {
  font-size: 40rpx;
  color: rgb(0, 0, 0);
  margin-bottom: 20rpx;
}

/* 提问内容框 */
.question-content {
  font-size: 32rpx;
  color: rgb(0, 0, 0);
  margin-bottom: 15rpx;
}

/* 提问者信息框 */
.question-meta {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #999;
}

/* 回答框整体高度 */
.answers {
  margin-top: 20rpx;
}

/* 回答框 */
.answer-item {
  background-color: #f5f5f5;
  padding: 10rpx;
  /* margin-bottom: 10rpx; */
  /* border-radius: 10rpx; */
  /* box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1); */
}

/* 回复的内容 */
.answer-content {
  font-size: 26rpx;
  color: rgb(0, 0, 0);
  margin-bottom: 10rpx;
}

/* 回复者相关信息 */
.answer-meta {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #999;
  margin-bottom: 10rpx;
}

/* 回复TA按钮样式 */
.reply-button {
  background-color: #008e8f;
  color: white;
  border: none;
  padding: 1px 8px;
  border-radius: 5px;
  cursor: pointer;
  font-size: 16px;
  transition: background-color 0.3s ease;
  width: 100%; /* 使按钮宽度占满父容器 */
  text-align: center;
}

.reply-button:hover {
  background-color: #6dd8f3;
}

.loading {
  text-align: center;
  padding: 20rpx;
}

.no-more {
  text-align: center;
  padding: 20rpx;
  color: #999;
}

/* 悬浮发布按钮样式 */
.floating-button {
  position: fixed;
  bottom: 80rpx;
  right: 60rpx;
  width: 100rpx;
  height: 100rpx;
  background-color: #008e8f;
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%; /* 边框圆角 */
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.2);
  z-index: 1000; /* 确保是浮动按钮 */
}

.modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 2000;
}

.modal-dialog {
  background-color: #fff;
  padding: 30rpx;
  border-radius: 15rpx;
  width: 90%; /* 设置宽度为屏幕的90% */
  /* width: 95%;
  max-width: 500rpx; */
  box-shadow: 0 10rpx 20rpx rgba(0, 0, 0, 0.1);
}

.modal-header {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
}

.modal-body {
  margin-bottom: 20rpx;
}

.input-field {
  height: 60rpx;/*问题标题框的高度设置*/
  width: 100%; /* 屏幕宽度的 100% */
  margin-bottom: 20rpx;
  padding: 10rpx;
  border: 1rpx solid #ccc;
  border-radius: 10rpx;
  font-size: 28rpx;
  color: #333;
}

.textarea-field {
  width: 100%; /* 屏幕宽度的 100% */
  height: 200rpx; /* 固定高度 */
  padding: 10rpx;
  border: 1rpx solid #ccc;
  border-radius: 10rpx;
  font-size: 28rpx;
  color: #333;
}

.modal-footer {
  display: flex;
  justify-content: flex-end;
  gap: 20rpx;
}

.modal button {
  padding: 15rpx 30rpx;
  border: none;
  border-radius: 10rpx;
  font-size: 28rpx;
  color: white;
  background-color: #008e8f;
  transition: background-color 0.3s ease;
} 

/*提交取消按钮样式*/
.modal button:hover {
  background-color: #008e8f;
}

.modal button:active {
  background-color: #008e8f;
} 

